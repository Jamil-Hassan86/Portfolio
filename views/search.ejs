<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Search</title>
</head>
<body>
    <h1>Movie Search</h1>

    <form action="results" method="get">
        <input type="text" name="title" placeholder="Search for a movie" required>
        <button type="submit">Search</button>
    </form>
    
    <ul>
        <% if (movies.length > 0) { %>
            <% movies.forEach(movie => { %>
                <li>
                    <p><%= movie.title %></p>
                    <p>Release Year: <%= movie.releaseYear %></p>
                    <% if (movie.image) { %>
                        <img src="<%= movie.image %>" alt="<%= movie.title %>" style="width: 100px;">
                    <% } else { %>
                        <p>No Image Available</p>
                    <% } %>
                    <form action="/movies/<%= movie.id %>/reviews" method="get">
                        <input type="hidden" name="title" value="<%= movie.title %>">
                        <input type="hidden" name="image" value="<%= movie.image %>">
                        <button type="submit">Reviews</button>
                      </form>
                </li>
            <% }); %>
        <% } else { %>
            <p>No results found.</p>
        <% } %>
    </ul>

</body>
</html>