<!doctype html>
<head>
    <title>Edit Review</title>
    <link rel="stylesheet"  type="text/css" href="/styles.css" />
</head>
<body>
    <header>
        <h1>Edit Review for <%= movieTitle %></h1>
        <img src="<%= movieImage %>" alt="<%= movieTitle %> Poster" width="150">
    </header>

    <form action="/movies/<%= movieId %>/reviews/edit/<%= review.review_id %>" method="POST">
        <input type="hidden" name="movieId" value="<%= movieId %>">
        <input type="hidden" name="movieImage" value="<%= movieImage %>">
        <input type="hidden" name="movieTitle" value="<%= movieTitle %>">
    
        <label for="reviewText">Review Text:</label>
        <textarea id="reviewText" name="review_text" required><%= review.review_text %> </textarea>
    
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="1" max="5" value="<%= review.rating %>" required>
    
        <button type="submit">Update Review</button>
    </form>
</body>
</html>